<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="EndScreenGrid">
    
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="textBlock" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="YOU FINISHED ALL OF THE LEVELS" VerticalAlignment="Center" FontFamily="../fonts/#Sniglet" Foreground="Black"/>
        <TextBlock Grid.Row="1" x:Name="textBlock_Copy" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="CONGRATULATIONS !" VerticalAlignment="Center" FontFamily="../fonts/#Sunrise International Demo" Foreground="Black" FontSize="48"/>
    </Grid>
</Grid>